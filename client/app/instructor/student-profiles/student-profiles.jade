.container-fluid
  h2 {{ $ctrl.pageTitle }}
  ul.list-group
    li.list-group-item.panel.panel-primary(ng-repeat='student in $ctrl.students')
      .row
        .col-sm-3
          img(ng-show='student.github' src='{{ student.github.avatar_url }}' alt='Avatar' height='160' width='160')
        .col-sm-9
          strong {{student.name}}
          //- pre {{ student.github | json }}
          br
          dl.dl-horizontal
            dt(ng-show='student.email') Local:
            dd(ng-show='student.email') {{student.email}}
            dt(ng-show='student.github') GitHub:
            dd(ng-show='student.github') <a target="_blank" ng-href="https://github.com/{{student.github.login}}">{{student.github.login}}</a>
            dt Role:
            dd {{ student.role }}
            dt Cohort:
            dd {{ student.cohort.name || 'Not Set' }}
            dt Squad:
            dd {{ student.squad.name || 'Not Set' }}
            dt Attendance:
            dd {{ $ctrl.getAttendancePercentage(student) | number }}%
              span(style='margin-left: 10px')
                | ({{ $ctrl.getAttendancePresentOrLate(student) }} /
                |  {{ student.attendance.length }})

      .row(style='margin-top: 20px')
        .col-sm-12
          .student-projects(ng-hide='$ctrl.isStudent()')
            hr
            h4 Individual Projects:
            uib-accordion(close-others="'true'")
              .panel-warning(uib-accordion-group='', is-open='status.open', ng-repeat='project in student.projects | orderBy : "num"')
                uib-accordion-heading
                  | Project {{ project.num }} - {{ project.title }} - {{ $ctrl.getTotalProjectScore(project) }} / {{project.requirements.length * 2}}
                  i.pull-right.glyphicon(ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}")
                dl.dl-horizontal
                  dt Title:
                  dd {{ project.title }}
                  dt Info:
                  dd {{ project.info }}
                  dt GitHub URL:
                  dd
                    a(ng-href="{{project.githubUrl}}", target="_blank")
                      | {{ project.githubUrl }}
                  dt Deployment URL:
                  dd
                    a(ng-href="{{project.deploymentUrl}}", target="_blank")
                      | {{ project.deploymentUrl }}
                  dt Instructor Comments
                  dd
                    a(href='#',
                      editable-text='project.comments',
                      ng-model='project.comments',
                      onbeforesave="$ctrl.updateProjectComments(student, project, $data)")
                      | {{ project.comments || 'empty' }}
                  dt Total Score:
                  dd {{ $ctrl.getTotalProjectScore(project) }}

                hr

                div(ng-init='project.requirementsIsCollapsed = true; project.keyIsCollapsed = true;')
                  a(href='#' ng-click='project.requirementsIsCollapsed = !project.requirementsIsCollapsed')
                    span.text-warning
                      | Requirements and Instructor Feedback
                    i.text-warning.glyphicon(ng-class="{'glyphicon-chevron-down': !project.requirementsIsCollapsed, 'glyphicon-chevron-right': project.requirementsIsCollapsed}")
                  div(uib-collapse='project.requirementsIsCollapsed')
                    project-requirements-key

                    table.table.table-bordered.table-striped(style='margin-top: 20px')
                      thead
                        tr
                          th Title
                          th Info
                          th Comments
                          th Score
                      tbody
                        tr(ng-repeat='requirement in project.requirements | orderBy : "num"')
                          td {{ requirement.title }}
                          td {{ requirement.info }}
                          td
                            a(href='#',
                              editable-text='requirement.comments',
                              ng-model='requirement.comments',
                              onbeforesave="$ctrl.updateProjectRequirementComments(student, project, requirement, $data)")
                                | {{ requirement.comments || 'empty' }}
                          td
                            a(href='#',
                              editable-range='requirement.score',
                              e-step="0.5",
                              e-min="0",
                              e-max="3",
                              ng-model='requirement.score',
                              onshow='$ctrl.zeroForNull(requirement, "score")',
                              onbeforesave='$ctrl.updateProjectRequirementScore(student, project, requirement, $data)')
                                | {{ requirement.score || (requirement.score === 0 ? 0 : 'empty') }}
            h4 Group Projects:
