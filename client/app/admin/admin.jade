.container-fluid
  h3 Users
  ul.list-group
    li.list-group-item(ng-repeat='user in admin.users')
      strong {{user.name}}
      br
      //- span.text-muted(ng-show='user.email') EMail: {{user.email}}
      //- span.text-muted(ng-show='user.github') GitHub:{{user.github.login}}
      dl.dl-horizontal
        dt(ng-show='user.email') Local:
        dd(ng-show='user.email') {{user.email}}
        dt(ng-show='user.github') GitHub:
        dd(ng-show='user.github') {{user.github.login}}
        dt Role:
        dd
          a(href='#',
          editable-radiolist='user.role',
          e-ng-options='r as r for r in admin.roles',
          onbeforesave="admin.updateRole(user, $data)")
            | {{ user.role }}
      a.trash(ng-click='admin.delete(user)')
        span.glyphicon.glyphicon-trash.pull-right(style='margin-top:-15px;')
